@model CrudProdutosv4.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Produto</h1>

<h3>Tem certeza que deseja deletar esse produto?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-danger">
            <i class="fa-solid fa-trash-can"></i>
            <input type="submit" value="Deletar" style="background:none; border:none; color:white;" />
        </a> |
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-list-ul" style="margin-right:9px;"></i>Conferir lista de Produtos
        </a>
    </form>
</div>

